#include <stdio.h>
#include <stdlib.h>

int main ()
{
    int a, max_a=0, min_a=9;
    printf ("Введите число = ");
    scanf("%d", &a);
    while (a>0) {
        if (a%10==0) {min_a=0;}
    if (a%10>max_a) {max_a=a%10;}
    if (a%10<min_a) {min_a=a%10;}
    a=a/10;
    }
    printf ("Максимальное число = %d, Минимальное число = %d", max_a, min_a);
}
